
import Affaires from './components/Affaires/Affaires.vue'
import AffairesDashboard from './components/Affaires/AffairesDashboard.vue'
import Clients from './components/Clients/Clients.vue'
import ClientsEdit from './components/Clients/ClientsEdit.vue'
import Operateurs from './components/Operateurs/Operateurs.vue'
import OperateursEdit from './components/Operateurs/OperateursEdit.vue'
import Numeros from './components/Numeros/Numeros.vue'
import NumerosHistory from './components/Numeros/NumerosHistory.vue'
import About from './components/About/About.vue'
import Login from './components/Login/Login.vue'

const routes = [
    { path: '/', component: Affaires, redirect:'/affaires' },    
    { path: '/affaires', component: Affaires },
    { path: '/affaires/:id', component: AffairesDashboard },
    { path: '/clients', component: Clients },
    { path: '/clients/new', component: ClientsEdit },
    { path: '/clients/edit/:id', component: ClientsEdit },
    { path: '/operateurs', component: Operateurs },
    { path: '/operateurs/new', component: OperateursEdit },
    { path: '/operateurs/edit/:id', component: OperateursEdit },
    { path: '/login', component: Login },
    { path: '/numeros', component: Numeros },
    { path: '/numeros/:id', component: NumerosHistory },
    { path: '/apropos', component: About }
];

export default routes;